<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".home">

    <TextView
            android:layout_width="250dp"
            android:layout_height="56dp"
            android:text="@string/receive"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.4" app:layout_constraintVertical_bias="0.031"
            android:textSize="36sp" android:gravity="center"/>

    <EditText
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/password_field"
            android:textSize="24sp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:background="@color/colorWhite"
            android:textColor="@android:color/black" android:textColorHighlight="@color/colorWhite"
            android:textColorHint="@color/colorWhite" android:textColorLink="@color/colorWhite"
            android:importantForAutofill="no" app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintVertical_bias="0.398"/>

    <Button
            android:text="@string/generate_qr"
            android:layout_width="193dp"
            android:layout_height="68dp"
            android:id="@+id/login_btn" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintVertical_bias="0.718" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:textSize="24sp"
            android:textColor="@color/colorWhite" android:textColorHighlight="@color/colorWhite"
            android:textColorHint="@color/colorWhite" android:background="@color/colorPrimary"
    />

</androidx.constraintlayout.widget.ConstraintLayout>